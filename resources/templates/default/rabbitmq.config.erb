 {ssl, [{versions, ['tlsv1.2','tlsv1.1']}]},
 {rabbit, [{tcp_listeners, [5672]},
               {ssl_options,
                 [{certfile, "/var/opt/opscode/nginx/ca/rb-f9z6w7fy1t.crt"},
